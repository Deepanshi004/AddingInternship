<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="3dp"
        android:color="#000000" /> <!-- Soft pink border (change if needed) -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional internal padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
